@model MVCHomework_20170703.Models.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>
        登入系統
    </title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport" />
    <!-- Bootstrap 3.3.6 -->
    <link rel="stylesheet" href="/Plugins/Bootstrap/css/bootstrap.min.css" />
    <!-- Theme style -->
    <link rel="stylesheet" href="/Content/AdminLTE.min.css" />
    <!-- iCheck -->
    <link rel="stylesheet" href="/Plugins/iCheck/square/blue.css" />

    <!-- jQuery 2.2.3 -->
    <script src="/Plugins/jQuery/jquery-2.2.3.min.js"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>

        <script src="/Scripts/html5shiv.min.js"></script>
        <script src="/Scripts/respond.min.js"></script>
      <![endif]-->
    <link rel="shortcut icon" type="image/x-icon" href="favicon.ico" />
</head>
<body class="hold-transition login-page" style="background: url(/Images/linen.jpg) repeat">
    <div class="login-box">
        <div class="login-logo">
            <img src="../Images/logo_login.png" style="width:50%;border-width:0px;" />
            <p>
            </p>
        </div>
        <div class="login-box-body" style="border-radius: 10px;">
            <p class="login-box-msg">
                MVC作業
            </p>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @*@Html.ValidationSummary()*@
                <div class="form-group has-feedback">
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = "測試管理者帳號 : 123" } })
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    @Html.ValidationMessageFor(model => model.UserName, String.Empty, new { @style = "color:red;" })
                </div>
                <div class="form-group has-feedback">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "測試管理者密碼 : 123" } })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    @Html.ValidationMessageFor(model => model.Password, "", new { @style = "color:red;" })
                </div>
                    <div class="row">
                        <div class="col-xs-8"></div>
                        <div class="col-xs-4">
                            <input type="submit" value="登入" class="btn btn-primary btn-block btn-flat" />
                        </div>
                    </div>
            }
            <br />
            <br>
        </div>
    </div>
    <!-- Bootstrap 3.3.6 -->
    <script src="/Plugins/Bootstrap/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="/Plugins/iCheck/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
</body>

</html>


